<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    {{>header}}
  </head>
  <body>
    {{>navbar}}
    <div class="container mt-5">
      <div className="row">
        <div className="col-10 mx-auto">
          <div class="row  mb-5 mb-md-0">
            <div class="col-12 col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1  d-flex justify-content-center flex-column">
              <h2 class="mb-4 text-center text-primary">Sing Up</h2>
              <form method="post" action="/login">
                <div class="mb-3">
                  <input type="email" placeholder="Enter the email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <input type="password" placeholder="Enter the password" name="password" class="form-control" >
                  <div class="form-text text-danger">{{valid}}</div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
            <div class="col-12 col-lg-6 pt-5 pt-lg-0 order-1 order-lg-2 ">
              <figure>
                <img src="./images/laptop.svg" alt="laptop images" style="filter: drop-shadow(8px 8px 10px gray);" class="img-fluid" />
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
